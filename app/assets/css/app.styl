body
  line-height: 1
  font-family: 'Quattrocento', serif
  color: #000
  background-color: beige

input:focus, textarea:focus
  outline 0
  -moz-outline-style none

::placeholder
  color: marron
  text-indent: 0

.input-wrapper
  position: relative
  font-size: 1em
  &:before
    content: ''
    absolute: left 0 top .85em
    size: 100% 1px
    background-color: marronClaro
    z-index: -1
  input
    reset-box-model()
    width: 100%;
    border: none
    font-family: inherit
    font-size: inherit
    background-color: transparent
    &:disabled
      color marron
    &:-webkit-autofill
      background-color: transparent

header
  position: relative
  padding: 10px 12px
  font-size: 25px
  h1
    position: relative
    margin: 0 0 0.2em
    user-select: none
    cursor: default
    &:hover
      span.t
        opacity: 0
        transition-delay: 0
      span.th
        opacity: 1 !important
        transition-delay: .15s
    span.t
      transition-delay: .15s
    span.h
      absolute: left 0 top 0
      opacity: 0
      transition-delay: 0
    span
      transition: opacity .3s ease-out
  .input-wrapper
    width: 320px;
    max-width: 100%;
    font-size: .72em
  button
    display: none

@require 'views/**/*'