@require 'lib/dev-tools'
@require 'lib/mini-reset'

beige = #F0EFED
marron = #89766C
marronClaro = lighten(marron, 80%)
negro = #444444
rojo = #972D15

::selection
  background: rojo

*
  box-sizing: border-box

body, html
  size: 100%

