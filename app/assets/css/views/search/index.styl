.results-table
  margin-top: 20px

  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0

  tr:hover
    td
      background-color: marronClaro

  td
    padding-top: 11px
    padding-left: 8px
    padding-right: 8px
    padding-bottom: 8px
    text-align: left
    cursor: default
    line-height: 1.2
    word-break: break-word
    overflow: hidden
    text-overflow: ellipsis

    &:first-child
      padding-left: 16px

    &:last-child
      padding-right: 16px

  h2
    display: inline-block

  td:nth-child(1) // link
    text-align: center

    a
      color: rojo
      text-decoration: none
      transition: color .3s

      &:hover
        color: rojoOscuro

  td:nth-child(2) // title
    width: auto

  td:nth-child(3) // size
    color: marron
    font-size: .8em
    font-weight: bold
    text-align: right

  td:nth-child(4) // peers
    text-align: center


  @media (max-width: 779px)

    tr
      &:hover
        td
         background-color: inherit

      &:nth-child(2n)
        td
          background-color: marronClaro

    td
      display: block
      padding-top: 8px
      padding-left: 10px
      padding-right: 10px
      padding-bottom: 8px
      text-align: left
      cursor: default

      &:first-child
        padding-left: 10px
        padding-top: 16px

      &:last-child
        padding-right: 10px
        padding-bottom: 16px
        margin-bottom: 20px

      &:before
        display: inline-block
        font-weight: bold
        padding-right: 8px

    td:nth-child(1) // link
      text-align: left

      &:before
        content: 'Descargar:'

    td:nth-child(2) // title
      &:before
        content: 'Título:'

    td:nth-child(3) // size
      text-align: left
      color: inherit
      font-size: inherit
      font-weight: inherit

      &:before
        content: 'Tamaño:'

    td:nth-child(4) // peers
      text-align: left

      &:before
        content: 'Peers:'
