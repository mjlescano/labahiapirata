extends ../layout

append vars
  - title = locals.query || 'Resultados de Búsqueda'

block content
  if results.length
    .results-table
      table
        tbody
          each torrent in results
            tr
              td
                a(href=torrent.magnet, title='Descargar') Link
              td= torrent.title
              td= torrent.size || ''
              td #{torrent.seeders} · #{torrent.leechers}
  else
    h1 nada encontrado :(
